<%= form_with(model: compra, local: true) do |form| %>
  <% if compra.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(compra.errors.count, "error") %> prohibited this compra from being saved:</h2>

      <ul>
      <% compra.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :fecha %>
    <%= form.date_select :fecha, id: :compra_fecha,
    class: 'large-12 columns'%>
  </div>

  <div class="field">
    <%= form.label :monto %>
    <%= form.number_field :monto, id: :compra_monto,
    title:'Precio'%>
  </div>

  <div class="field">
    <%= form.label :cliente %>
    <%= form.text_area :cliente, id: :compra_cliente,
    title:'Tu nombre', data:{tooltip: true}%>
  </div>

  <div class="actions">
    <%= form.submit class:'button success'%>
  </div>
<% end %>
